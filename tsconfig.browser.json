  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "dist/browser",
    "noImplicitAny": true,
    "lib": [
      "es5",
      "es6"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
